<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard For Admin</title>
    <link rel="stylesheet" href="/css/style.css">
    <%- include('partials/head.ejs') %>
</head>
<body>
    <%- include('partials/nav.ejs') %>

    <div class="d-flex justify-content-between mt-3" style="margin: 0px 15px;">
        <div><h3>Welcome to Admin Dashboard</h3></div>
        <div>
            <button class="btn-light border-primary btn">
                <a style="color: black; text-decoration: none;" href="/admin/dashboard/add">Add-Blogs</a>
            </button>
        </div>
    </div>

    <hr>

<div class="container">
    <table class="table">
        <% if (blogs && blogs.length > 0) { %>
            <thead>
                <tr>
                    <th scope="col">Sr.no</th>
                    <th scope="col">Title</th>
                    <th scope="col">Content</th>
                    <th scope="col">Author</th>
                    <th scope="col">View</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <% blogs.forEach((blog,index )=> { %>
            <tbody>
                <tr>
                    <th scope="row"><%= startSerial + index  %></th>
                    <td><%= blog.title %></td>
                    <td><%= blog.content.length > 100 ? blog.content.slice(0, 80) + "..." : blog.content %></td>
                    <td><%= blog.author %></td>
                    <td>
                        <a href="/admin/dashboard/<%= blog._id %>">
                            <img src="https://tse3.mm.bing.net/th?id=OIP.JVnbhT3t9Xo13oxbQgwI_QHaHa&pid=Api&P=0&h=220" alt="view" height="25px" style="margin-left: 5px;">
                        </a>
                    </td>
                    <td>
                        <a href="/admin/dashboard/update/<%= blog._id %>">
                            <img src="https://tse2.mm.bing.net/th?id=OIP._9--JKGbpacSeqRt8PA33QHaHa&pid=Api&P=0&h=220" alt="update" height="25px" style="margin-left: 10px;">
                        </a>
                    </td>
                    <td>
                        <form action="/admin/dashboard/delete/<%= blog._id %>" method="POST" style="display:inline;">
                            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#deleteModal<%= blog._id %>">
                                <img src="https://tse1.mm.bing.net/th?id=OIP.k0m2i2jTSw2J89geV7CROAHaHk&pid=Api&P=0&h=220" alt="delete" height="25px">
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="deleteModal<%= blog._id %>" tabindex="-1" aria-labelledby="exampleModalLabel<%= blog._id %>" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel<%= blog._id %>">Confirm Deletion</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete this post?<br><strong><%= blog.title %></strong>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="button" class="btn btn-danger" onclick="this.closest('form').submit()">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </td>
                </tr>
            </tbody>
                
            <% }); %>
        <% } else { %>
            <p>No blogs found.</p>
        <% } %> 
    </table>   
    <section>
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item"><a href="?page=1" class="page-link">Previous</a></li>
                <li class="page-item"><a class="page-link" href="?page=2">Next</a></li>
            </ul>
        </nav>
    </section>
</div>
</body>
</html>
